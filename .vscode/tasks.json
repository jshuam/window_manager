{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "[MSVC] C/C++: BUILD",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\${fileBasenameNoExtension}.exe",
				"${file}",
				"User32.lib"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Build with MSVC"
		}
	]
}